<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/layout_boutique_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
    >

    <ImageView
        android:id="@+id/ivBoutiqueImg"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/nopic"
        android:scaleType="fitXY"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:gravity="top"
        android:layout_toRightOf="@id/ivBoutiqueImg"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/white"
        >
        <TextView
            android:id="@+id/tvBoutiqueTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aug 8 22"
            android:textColor="@color/list_item_title"
            android:textSize="16sp"
            android:ellipsize="end"
            android:layout_marginTop="20dp"
            />
        <TextView
            android:id="@+id/tvBoutiqueName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="秋季冬季大衣"
            android:textSize="20sp"
            android:textColor="@color/list_item_title"
            android:layout_marginTop="20sp"
            android:ellipsize="end"
            />
        <TextView
            android:id="@+id/tvBoutiqueDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2015F/W Trends Report"
            android:textColor="@color/gray_normal"
            android:textSize="18sp"
            android:ellipsize="end"
            android:layout_marginTop="10dp"
            android:maxLines="2"
            />
    </LinearLayout>

</RelativeLayout>