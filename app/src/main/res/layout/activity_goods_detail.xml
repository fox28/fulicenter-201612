<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/activity_goods_detail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/good_detail_bg"
    >

    <RelativeLayout
        android:id="@+id/layout_title"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/orange"
        >
        <include layout="@layout/common_head_title"/>
        <ImageView
            android:id="@+id/iv_good_share"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/selector_share_bg"
            android:layout_alignParentRight="true"
            android:padding="8dp"
            />
        <ImageView
            android:id="@+id/iv_good_collect"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/iv_good_share"
            android:padding="5dp"
            android:src="@mipmap/bg_collect_in"
            />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/iv_good_collect">
            <ImageView
                android:id="@+id/iv_good_cart"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:src="@mipmap/bg_cart_selected"
                android:layout_alignParentRight="true"
                />
            <TextView
                android:id="@+id/tv_cart_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#f00"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:text="12"
                />

        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layout_banner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layout_title"
        android:padding="25dp"
        android:background="@color/good_detail_bg_white"
        >
        <TextView
            android:id="@+id/tv_good_name_english"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textColor="@color/black"
            android:text="Monbento"
            />
        <TextView
            android:id="@+id/tv_good_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textColor="@color/black"
            android:layout_below="@id/tv_good_name_english"
            android:text="双层分隔饭盒 绿色"
            />
        <TextView
            android:id="@+id/tv_good_price_shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textColor="@color/good_detail_currency_price"
            android:layout_alignParentRight="true"
            android:text="￥260"
            />
        <TextView
            android:id="@+id/tv_good_price_current"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textColor="@color/good_detail_currency_price"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_good_price_shop"
            android:text="￥293"
            />
        <RelativeLayout
            android:id="@+id/layout_image"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:layout_marginTop="50dp"
            android:layout_below="@id/tv_good_price_current"
            >
            <com.example.apple.fulicenter.ui.view.SlideAutoLoopView
                android:id="@+id/salv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/good_detail_bg_white"
                />
            <com.example.apple.fulicenter.ui.view.FlowIndicator
                android:id="@+id/flowIndicator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                app:count="4"
                app:focus="0"
                app:focus_color="@color/good_detaul_flow_indicator_focus"
                app:normal_color="#a1d1d1d1"
                app:r="5dp"
                app:space="3dp"
                />

        </RelativeLayout>
        <WebView
            android:id="@+id/wv_good_brief"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_image"
            android:layout_margin="10dp"
            android:background="@color/good_detail_bg_white"
            />

    </RelativeLayout>

